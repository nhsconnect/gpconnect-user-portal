@page
@model GpConnect.NationalDataSharingPortal.EndUserPortal.Pages.Search.DetailModel

<div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper" id="maincontent">
        <partial name="Back" model=Model.BackPartial></partial>
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-full">
                <h1 class="nhsuk-label-wrapper">
                    <label class="nhsuk-label nhsuk-label--xl" asp-for="TransparencyPageTitle"></label>
                </h1>
                <div class="nhsuk-card nhsuk-card--care nhsuk-card--care--non-urgent">
                    <div class="nhsuk-card--care__heading-container">
                        <h3 class="nhsuk-card--care__heading">
                            <span class="nhsuk-u-visually-hidden">Information: </span>Health care setting
                        </h3>
                    </div>
                    <div class="nhsuk-card__content">
                        <div>
                            <label class="nhsuk-label nhsuk-label--m">
                                @Model.SearchResultEntry.SiteName
                            </label>
                            <p>@Model.SearchResultEntry.FullAddress</p>
                        </div>
                        <br>
                        <div>
                            <label class="nhsuk-label nhsuk-label--m" asp-for="SearchResultEntry.UseCaseDescription"></label>
                            <p class="nhsuk-card__description">@Model.SearchResultEntry.UseCaseDescription</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="Help" />
        <partial name="Terms" />
    </main>
</div>
