@using GpConnect.NationalDataSharingPortal.EndUserPortal.Helpers.Enumerations
@model GpConnect.NationalDataSharingPortal.EndUserPortal.Pages.Search.BackPartialModel

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-back-link">
            @if (@Model?.Source == DetailViewSource.Results) 
            {
                <a class="nhsuk-back-link__link" 
                    asp-page=@Model?.PageName
                    asp-route-Query=@Model?.Query
                    asp-route-Mode=@Model?.Mode
                    asp-route-PageNumber=@Model?.ResultsPageNumber
                >
                    <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" height="24" width="24">
                        <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                    </svg>
                    Back
                </a>
            }
            else 
            {
                <a class="nhsuk-back-link__link" 
                        asp-page=@Model?.PageName
                        asp-route-ProviderName=@(Model?.Mode == SearchMode.Name ? Model?.Query : null)
                        asp-route-ProviderOdsCode=@(Model?.Mode == SearchMode.Code ? Model?.Query : null)
                    >
                    <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" height="24" width="24">
                        <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                    </svg>
                    Back
                </a>
            }
                
        </div>
    </div>
</div>